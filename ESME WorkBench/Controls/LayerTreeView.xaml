        <Style x:Key="ToolTipStyle" TargetType="Control">
            <Setter Property="Background" Value="Gainsboro" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
        <Style x:Key="ToolTipLefthandListViewStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextAlignment" Value="Right" />
            <Setter Property="Margin" Value="5 2 5 0" />
            <Setter Property="Grid.Column" Value="0" />
        </Style>
        <Style x:Key="ToolTipRighthandListViewStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="Margin" Value="0 2 5 0" />
            <Setter Property="Grid.Column" Value="1" />
        </Style>
        <Style x:Key="ToolTipListViewStyle" TargetType="Control">
            <Setter Property="Background" Value="Gainsboro" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style x:Key="ToolTipHeaderStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="-5 -1 -5 0" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="Gray" />
        </Style>
    </UserControl.Resources>
    <TreeView DockPanel.Dock="Top" Grid.IsSharedSizeScope="True" ItemsSource="{Binding RootNodes}">
        <TreeView.Resources>
            <HierarchicalDataTemplate DataType="{x:Type Scenarios:Scenario}" ItemsSource="{Binding Platforms}">
                <Controls:LayerControl IsChecked="{Binding LayerSettings.IsChecked}" LayerName="{Binding Name, StringFormat=Scenario: {0}}" LineColorVisibility="Collapsed" />
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type Scenarios:Platform}" ItemsSource="{Binding Sources}">
                <Controls:LayerControl IsChecked="{Binding LayerSettings.IsChecked}" LayerName="{Binding PlatformName}" LineOrSymbolColor="{Binding LayerSettings.LineOrSymbolColor}" />
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type Scenarios:Source}" ItemsSource="{Binding Modes}">
                <Controls:LayerControl IsChecked="{Binding LayerSettings.IsChecked}" LayerName="{Binding SourceName}" LineColorVisibility="Collapsed" />
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type Layers:EnvironmentNode}" ItemsSource="{Binding EnvironmentLayers}">
                <Controls:LayerControl IsChecked="{Binding IsChecked}" LayerName="Environment" LineColorVisibility="Collapsed" />
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type Scenarios:Mode}" ItemsSource="{Binding TransmissionLosses}">
                <Controls:LayerControl IsChecked="{Binding LayerSettings.IsChecked}" LayerName="{Binding ModeName}" LineColorVisibility="Collapsed" />
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type Layers:WorldMapNode}" ItemsSource="{Binding Features}">
                <Controls:LayerControl IsChecked="{Binding IsChecked}" LayerName="World Map" LineOrSymbolColor="{Binding LineColor}" LineOrSymbolSize="{Binding LineWeight}" />
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type Layers:SedimentNode}" ItemsSource="{Binding SedimentTypes}">
                <Controls:LayerControl IsChecked="{Binding IsChecked}" LayerName="Sediment" LineColorVisibility="Collapsed" />
            </HierarchicalDataTemplate>
            <DataTemplate DataType="{x:Type Scenarios:TransmissionLoss}">
                <Controls:LayerControl IsChecked="{Binding LayerSettings.IsChecked}" LayerName="{Binding LayerName}" LineOrSymbolColor="{Binding LayerSettings.LineOrSymbolColor}" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type Layers:SedimentTypeNode}">
                <Controls:LayerControl IsChecked="{Binding IsChecked}" LayerName="{Binding SedimentType}" LineOrSymbolColor="{Binding SymbolColor}" LineOrSymbolSize="{Binding SymbolSize}" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type Locations:EnvironmentalDataSet}">
                <Controls:LayerControl IsChecked="{Binding LayerSettings.IsChecked}" LayerName="{Binding LayerName}" LineOrSymbolColor="{Binding LayerSettings.LineOrSymbolColor}" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type Layers:WorldMapFeatureNode}">
                <Controls:LayerControl IsChecked="{Binding IsChecked}" LayerName="{Binding FeatureName}" LineColorVisibility="Collapsed" />
            </DataTemplate>
            <DataTemplate DataType="{x:Type Layers:BathymetryNode}">
                <Controls:LayerControl IsChecked="{Binding IsChecked}" LayerName="Bathymetry" LineColorVisibility="Collapsed" />
            </DataTemplate>
        </TreeView.Resources>
    </TreeView>
</UserControl>