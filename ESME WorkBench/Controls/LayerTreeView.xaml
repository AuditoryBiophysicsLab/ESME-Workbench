                                    <ListViewItem Content="Low frequency" />
                                    <ListViewItem Content="High frequency" />
                                    <ListViewItem Content="Pulse interval" />
                                    <ListViewItem Content="Pulse length" />
                                    <ListViewItem Content="Horizontal beam width" />
                                    <ListViewItem Content="Vertical beam width" />
                                    <ListViewItem Content="Depression/elevation angle" />
                                    <ListViewItem Content="Relative beam angle" />
                                    <ListViewItem Content="Radius" />
                                </ListView>
                                <ListView Grid.Column="1" HorizontalContentAlignment="Left" Margin="0 5 5 5">
                                    <ListViewItem Content="{Binding PSMName}" />
                                    <ListViewItem Content="{Binding PSMId}" />
                                    <ListViewItem Content="{Binding Name}" />
                                    <ListViewItem Content="{Binding Id}" />
                                    <ListViewItem Content="{Binding StartTime}" />
                                    <ListViewItem Content="{Binding Duration}" />
                                    <ListViewItem Content="{Binding Priority}" />
                                    <ListViewItem Content="{Binding Type}" />
                                    <ListViewItem Content="{Binding State}" />
                                    <ListViewItem Content="{Binding Linked}" />
                                    <ListViewItem Content="{Binding ActiveTime}" />
                                    <ListViewItem Content="{Binding DepthOffset}" />
                                    <ListViewItem Content="{Binding SourceLevel}" />
                                    <ListViewItem Content="{Binding SourceDepth}" />
                                    <ListViewItem Content="{Binding LowFrequency}" />
                                    <ListViewItem Content="{Binding HighFrequency}" />
                                    <ListViewItem Content="{Binding PulseInterval}" />
                                    <ListViewItem Content="{Binding PulseLength}" />
                                    <ListViewItem Content="{Binding HorizontalBeamWidth}" />
                                    <ListViewItem Content="{Binding VerticalBeamWidth}" />
                                    <ListViewItem Content="{Binding DepressionElevationAngle}" />
                                    <ListViewItem Content="{Binding RelativeBeamAngle}" />
                                    <ListViewItem Content="{Binding Radius}" />
                                </ListView>
                            </Grid>
                        </ToolTip>
                    </TextBlock.ToolTip>
                </TextBlock>
            </HierarchicalDataTemplate>
