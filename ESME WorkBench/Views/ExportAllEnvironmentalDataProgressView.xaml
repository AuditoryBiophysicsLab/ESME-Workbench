<Window x:Class="OneNavyModel.Views.ExportAllEnvironmentalDataProgressView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exporting All Environmental Data"
        WindowStyle="ToolWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <DockPanel LastChildFill="True">        
        <StackPanel DockPanel.Dock="Bottom" Margin="5">
            <Button Content="Cancel" IsCancel="True"/>
        </StackPanel>        
        <ProgressBar Margin="5" DockPanel.Dock="Top" Value="{Binding CurFileNumber}" Maximum="{Binding MaxFileCount}" Height="22"/>
        <TextBlock Text="{Binding Message}" Margin="5"/>
    </DockPanel>
</Window>
