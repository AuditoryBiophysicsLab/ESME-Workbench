<UserControl x:Class="ESME.Views.Controls.DataAxisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ESME.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
	<controls:DataAxis AxisLabel="{Binding Label}"
	                   AxisLocation="{Binding AxisLocation}"
	                   StartValue="{Binding MinValue}"
	                   EndValue="{Binding MaxValue}"
	                   TickValueFormat="{Binding TickValueFormat}" />
</UserControl>