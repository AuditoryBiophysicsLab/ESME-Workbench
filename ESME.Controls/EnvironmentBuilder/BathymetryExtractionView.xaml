<Window x:Class="ESME.Views.EnvironmentBuilder.BathymetryExtractionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bathymetry Data Extraction"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize" 
        WindowStyle="ToolWindow">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Bathymetry resolution (minutes)"
		           Margin="5 10 5 2" />
        <ComboBox ItemsSource="{Binding AvailableResolutions}"
		          SelectedItem="{Binding SelectedResolution}"
		          Margin="5 0 5 0"
		          ToolTip="Bathymetry data resolution in arc-minutes">
        </ComboBox>
        <TextBlock Width="190"
                   Margin="5"
                   TextWrapping="WrapWithOverflow" 
                   Text="{Binding Note}" />
        <DockPanel LastChildFill="False"
		           Margin="5 10">
            <Button Width="90"
			        Margin="10 0 0 0"
			        IsCancel="True"
			        Content="Cancel"
			        DockPanel.Dock="Right" />
            <Button Width="90"
			        IsDefault="True"
			        Content="OK"
			        DockPanel.Dock="Right"
			        Command="{Binding OkCommand}" />
        </DockPanel>
    </StackPanel>
</Window>
