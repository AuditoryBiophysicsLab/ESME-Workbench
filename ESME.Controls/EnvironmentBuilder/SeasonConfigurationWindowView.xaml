<Window x:Class="ESME.Views.EnvironmentBuilder.SeasonConfigurationWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:View="clr-namespace:ESME.Views.EnvironmentBuilder"
        Title="Season Configuration" Height="400" Width="300">
    <DockPanel LastChildFill="True">
        <DockPanel LastChildFill="False"
		            Margin="10"
		            DockPanel.Dock="Bottom">
            <Button Width="90"
			        Margin="10 0 0 0"
			        IsCancel="True"
			        Content="Cancel"
			        DockPanel.Dock="Right"
			        Command="{Binding CancelCommand}" />
            <Button Width="90"
			        IsDefault="True"
			        Content="OK"
			        DockPanel.Dock="Right"
			        Command="{Binding OkCommand}" />
        </DockPanel>
        <StackPanel>
            <View:SeasonConfigurationView DataContext="{Binding SeasonConfigurationViewModel}"/>
        </StackPanel>

    </DockPanel>
</Window>
