<Window x:Class="ESME.Views.InstallationWizard.WizardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:ESME.Views.Controls"
        Title="WizardView" Height="600" Width="500">

  <DockPanel LastChildFill="True">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
      <Button Content="Back" />
      <Button Content="Next/Finish" />
      <Button Content="Cancel" />
    </StackPanel>
    <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
      <TextBlock Text="stuff" />
      <Controls:FileOrDirectorySetting Caption="stuff" DialogTitle="more stuff" FileNameFilter="*.*|*.*"
                                       IsDirectoryBrowser="False"
                                       FileName="{Binding FileName, ValidatesOnDataErrors=True, ValidatesOnExceptions=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                                       Style="{StaticResource ValidatingFileOrDirectorySettingStyle}" />
    </StackPanel>
  </DockPanel>
</Window>