<UserControl x:Class="ESME.Views.Controls.ColorBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:Controls="clr-namespace:ESME.Views.Controls">
    <DockPanel LastChildFill="True"
               MouseLeftButtonDown="DockPanel_MouseLeftButtonDown"
               MouseWheel="Image_MouseWheel">
        <DockPanel.RenderTransformOrigin>
            0.5,0.5
        </DockPanel.RenderTransformOrigin>
        <Border BorderBrush="Black" 
                BorderThickness="0" 
                x:Name="topMargin" 
                Height="0" 
                DockPanel.Dock="Top"/>
        <Border BorderBrush="Black" 
                BorderThickness="0" 
                x:Name="botMargin" 
                Height="0" 
                DockPanel.Dock="Bottom"/>
        <Image Source="{Binding Path=ColorBarImage, RelativeSource={RelativeSource AncestorType={x:Type Controls:ColorBarView}}}"
               Stretch="Fill" 
               MouseMove="Image_MouseMove"
               MouseDown="Image_MouseDown"
               MouseUp="ColorBarImageMouseUp"/>
    </DockPanel>
</UserControl>
