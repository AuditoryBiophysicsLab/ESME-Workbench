<Window x:Class="ESME.Views.Locations.OverlayExpandView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:Controls="clr-namespace:ESME.Views.Controls" 
        Title="Expand Overlay File"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        SnapsToDevicePixels="True"
        WindowStyle="ToolWindow">
    <StackPanel>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Expand Limits by (km)"
                       Margin="5 5 5 2"/>
            <Controls:ValidatingTextBox BoundField="BufferSize"
                                        Margin="5 0 5 5"
                                        TabIndex="0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Ok" 
                    TabIndex="1"
                    Width="75" 
                    Margin="5" 
                    IsDefault="True" 
                    Command="{Binding OkCommand}"/>
            <Button Content="Cancel" 
                    TabIndex="2"
                    Width="75" 
                    Margin="5" 
                    IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
