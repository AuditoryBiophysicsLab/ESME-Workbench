<Window x:Class="ESME.Views.TransmissionLoss.TransmissionLossQueueView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TransmissionLossQueueView"
        Width="300"
        Height="300">
    <Grid>
        <ListBox ItemsSource="{Binding}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}\({0}\, {1}\) {2}:{3}:{4}">
                                <Binding Path="Value.ProgressTarget.TransmissionLoss.AnalysisPoint.Geo.Latitude" />
                                <Binding Path="Value.ProgressTarget.TransmissionLoss.AnalysisPoint.Geo.Longitude" />
                                <Binding Path="Value.ProgressTarget.TransmissionLoss.Mode.Source.Platform.PlatformName" />
                                <Binding Path="Value.ProgressTarget.TransmissionLoss.Mode.Source.SourceName" />
                                <Binding Path="Value.ProgressTarget.TransmissionLoss.Mode.ModeName" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
