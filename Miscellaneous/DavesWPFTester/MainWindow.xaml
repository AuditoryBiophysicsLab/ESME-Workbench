<Window x:Class="DavesWPFTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:DavesWPFTester"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mef="http:\\www.codeplex.com\MEFedMVVM"
        Title="Plugin tester"
        d:DataContext="{d:DesignInstance app:MainWindowViewModel}"
        mef:ViewModelLocator.ViewModel="MainWindowViewModel"
        SizeToContent="WidthAndHeight"
        SnapsToDevicePixels="True"
        mc:Ignorable="d">
    <Window.Resources />
    <Grid>
        <ListBox Grid.Column="0"
                 Grid.IsSharedSizeScope="True"
                 ItemsSource="{Binding AllPlugins}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="PluginType" />
                            <ColumnDefinition SharedSizeGroup="PluginName" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Key}" />
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Value}" 
                                  DisplayMemberPath="Value.PluginName" >
                            <ComboBox.Style>
                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="SelectedIndex" Value="0" />
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>