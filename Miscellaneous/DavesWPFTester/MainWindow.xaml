        <GroupBox Header="Test Area" Grid.Row="1" Grid.Column="0">
            <app:UsesAxes>
                <app:DataSeriesBase XMin="0"/>
                <app:DataSeriesBase XMax="11"/>
                <app:DataSeriesBase YMin="-1"/>
                <app:DataSeriesBase YMax="12"/>
            </app:UsesAxes>
        </GroupBox>
        <GroupBox Header="SeriesView" Grid.Row="1" Grid.Column="1" Padding="10">
            <app:TwoAxisSeriesView x:Name="TwoAxisSeriesView" DataContext="{Binding LowerRight}"/>
        </GroupBox>
