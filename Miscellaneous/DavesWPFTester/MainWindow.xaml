<Window x:Class="DavesWPFTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:DavesWPFTester"
        xmlns:controls="clr-namespace:ESME.Views.Controls;assembly=ESME.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mef="http:\\www.codeplex.com\MEFedMVVM"
        xmlns:WPF="clr-namespace:HRC.WPF;assembly=HRC"
        Title="Axis Control Tester"
        Width="800"
        Height="600"
        d:DataContext="{d:DesignInstance app:MainWindowViewModel}"
        mef:ViewModelLocator.ViewModel="MainWindowViewModel"
        SnapsToDevicePixels="True"
        mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <WPF:EventToCommandTrigger Command="{Binding ViewClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Left">
            <DockPanel>
                <TextBlock Height="95" DockPanel.Dock="Top" />
                <TextBlock Height="89" DockPanel.Dock="Bottom" />
                <controls:DataAxis VerticalAlignment="Top"
                                   Axis="{Binding YAxis,
                                                  Mode=OneWayToSource}"
                                   AxisLabel="Left Linear Axis"
                                   AxisLocation="Right"
                                   AxisType="Linear"
                                   EndValue="15"
                                   MajorTicks="{Binding YAxisMajorTicks,
                                                        Mode=OneWayToSource}"
                                   MinorTicks="{Binding YAxisMinorTicks,
                                                        Mode=OneWayToSource}"
                                   StartValue="-15"
                                   TickValueFormat="0.##" />
                <controls:DataAxis x:Name="LeftLogAxis"
                                   VerticalAlignment="Top"
                                   AxisLabel="Left Log Axis"
                                   AxisLocation="Right"
                                   AxisType="Logarithmic"
                                   EndValue="10000"
                                   StartValue="1"
                                   TickValueFormat="m" />
            </DockPanel>
        </DockPanel>
        <DockPanel DockPanel.Dock="Right">
            <TextBlock Height="95" DockPanel.Dock="Top" />
            <TextBlock Height="89" DockPanel.Dock="Bottom" />
            <controls:DataAxis x:Name="VerticalLinearAxis"
                               AxisLabel="Right Linear Axis"
                               AxisLocation="Left"
                               DockPanel.Dock="Right"
                               EndValue="10"
                               StartValue="-10"
                               TickValueFormat="0.#" />
            <controls:DataAxis AxisLabel="Right Log Axis"
                               AxisLocation="Left"
                               AxisType="Logarithmic"
                               DockPanel.Dock="Right"
                               EndValue="100000"
                               StartValue="100"
                               TickValueFormat="0.#" />
        </DockPanel>
        <controls:DataAxis x:Name="BottomLinearAxis"
                           Axis="{Binding XAxis,
                                          Mode=OneWayToSource}"
                           AxisLabel="Bottom Linear Axis"
                           AxisLocation="Top"
                           AxisType="Linear"
                           DockPanel.Dock="Bottom"
                           EndValue="15"
                           TestFunc="{Binding XTestFunc}"
                           MajorTicks="{Binding XAxisMajorTicks,
                                                Mode=OneWayToSource}"
                           MinorTicks="{Binding XAxisMinorTicks,
                                                Mode=OneWayToSource}"
                           StartValue="-15"
                           TickValueFormat="0.##" />
        <controls:DataAxis x:Name="HorizontalLogAxis"
                           AxisLabel="Bottom Log Axis"
                           AxisLocation="Top"
                           AxisType="Logarithmic"
                           DockPanel.Dock="Bottom"
                           EndValue="1e6"
                           StartValue="1"
                           TickValueFormat="e0" />
        <controls:DataAxis x:Name="HorizontalLinearAxis"
                           AxisLabel="Top Linear Axis"
                           AxisLocation="Bottom"
                           AxisType="Linear"
                           DockPanel.Dock="Top"
                           EndValue="25"
                           StartValue="-10"
                           TickValueFormat="0" />
        <controls:DataAxis AxisLabel="Top Log Axis"
                           AxisLocation="Bottom"
                           AxisType="Logarithmic"
                           DockPanel.Dock="Top"
                           EndValue="10000"
                           StartValue="0.01"
                           TickValueFormat="m" />
        <!--  <Image Source="{Binding DisplayImage}" />  -->
        <app:ShapeCanvas x:Name="ShapeCanvas" Shapes="{Binding Shapes}" />
    </DockPanel>
</Window>