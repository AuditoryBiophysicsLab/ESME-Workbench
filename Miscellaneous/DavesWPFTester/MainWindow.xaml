<Window x:Class="DavesWPFTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:DavesWPFTester"
        xmlns:controls="clr-namespace:ESME.Views.Controls;assembly=ESME.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mef="http:\\www.codeplex.com\MEFedMVVM"
        xmlns:WPF="clr-namespace:HRC.WPF;assembly=HRC"
        Title="Axis Control Tester"
        Width="800"
        Height="600"
        d:DataContext="{d:DesignInstance app:MainWindowViewModel}"
        mef:ViewModelLocator.ViewModel="MainWindowViewModel"
        SnapsToDevicePixels="True"
        mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <WPF:EventToCommandTrigger Command="{Binding ViewClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <DockPanel>
                <TextBlock Height="{Binding ActualHeight, ElementName=HorizontalLinearAxis, Mode=OneWay}" DockPanel.Dock="Top" />
                <TextBlock Height="{Binding ActualHeight, ElementName=HorizontalLogAxis, Mode=OneWay}" DockPanel.Dock="Bottom" />
                <controls:DataAxis VerticalAlignment="Top"
                                   AxisLabel="Left Linear Axis"
                                   AxisLocation="Right"
                                   AxisType="Linear"
                                   EndValue="62.54"
                                   StartValue="15"
                                   TickValueFormat="0.##" />
                <controls:DataAxis x:Name="VerticalLogAxis"
                                   VerticalAlignment="Top"
                                   AxisLabel="Left Log Axis"
                                   AxisLocation="Right"
                                   AxisType="Logarithmic"
                                   EndValue="10000"
                                   StartValue="1"
                                   TickValueFormat="e0" />
            </DockPanel>
        </DockPanel>
        <DockPanel DockPanel.Dock="Right">
            <TextBlock Height="{Binding ActualHeight, ElementName=HorizontalLinearAxis, Mode=OneWay}" DockPanel.Dock="Top" />
            <TextBlock Height="{Binding ActualHeight, ElementName=HorizontalLogAxis, Mode=OneWay}" DockPanel.Dock="Bottom" />
            <controls:DataAxis x:Name="VerticalLinearAxis"
                               AxisLabel="Right Linear Axis"
                               AxisLocation="Left"
                               DockPanel.Dock="Right"
                               EndValue="10"
                               StartValue="-10"
                               TickValueFormat="0.#" />
            <controls:DataAxis AxisLabel="Right Log Axis"
                               AxisLocation="Left"
                               AxisType="Logarithmic"
                               DockPanel.Dock="Right"
                               EndValue="100000"
                               StartValue="100"
                               TickValueFormat="0.#" />
        </DockPanel>
        <controls:DataAxis AxisLabel="Bottom Linear Axis"
                           AxisLocation="Top"
                           AxisType="Linear"
                           DockPanel.Dock="Bottom"
                           EndValue="15"
                           StartValue="-1"
                           TickValueFormat="e0" />
        <controls:DataAxis x:Name="HorizontalLogAxis"
                           AxisLabel="Bottom Log Axis"
                           AxisLocation="Top"
                           AxisType="Logarithmic"
                           DockPanel.Dock="Bottom"
                           EndValue="1e6"
                           StartValue="1"
                           TickValueFormat="e0" />
        <controls:DataAxis x:Name="HorizontalLinearAxis"
                           AxisLabel="Top Linear Axis"
                           AxisLocation="Bottom"
                           AxisType="Linear"
                           DockPanel.Dock="Top"
                           EndValue="25"
                           StartValue="-10"
                           TickValueFormat="0" />
        <controls:DataAxis AxisLabel="Top Log Axis"
                           AxisLocation="Bottom"
                           AxisType="Logarithmic"
                           DockPanel.Dock="Top"
                           EndValue="10000"
                           StartValue="0.01"
                           TickValueFormat="0.##" />

        <Grid>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SizeChanged">
                    <WPF:EventToCommandTrigger Command="{Binding GridSizeChangedCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Background="Transparent"
                       FontSize="24"
                       Text="{Binding WaitToRenderText}"
                       TextWrapping="Wrap" />
            <Image Grid.Row="0"
                   Grid.Column="0"
                   Source="{Binding WriteableBitmap}"
                   Stretch="Fill"
                   Visibility="{Binding WriteableBitmapVisibility}" />

            <Canvas x:Name="OverlayCanvas" Grid.Row="0" Grid.Column="0" Background="Transparent">
                <Path Data="{Binding BottomProfileGeometry}" Fill="DarkGray" Stroke="Black" StrokeThickness="0.1" />
            </Canvas>
        </Grid>
    </DockPanel>
</Window>