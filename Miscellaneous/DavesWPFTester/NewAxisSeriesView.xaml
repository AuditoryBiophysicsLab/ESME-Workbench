<UserControl x:Class="DavesWPFTester.NewAxisSeriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="clr-namespace:DavesWPFTester"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance app:TwoAxisSeriesViewModel}"
             d:DesignHeight="600"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Left">
            <DockPanel LastChildFill="True">
                <TextBlock Height="{Binding ActualHeight, ElementName=XAxis}" Background="LightPink" DockPanel.Dock="Bottom" />
                <app:NewDataAxis x:Name="YAxis"
                                 VerticalAlignment="Top"
                                 AxisLabel="{Binding Label}"
                                 AxisLocation="Left"
                                 AxisType="{Binding AxisType}"
                                 Background="LightBlue"
                                 DataContext="{Binding YAxis}"
                                 DataRange="{Binding Range}"
                                 DockPanel.Dock="Top"
                                 MappingFunction="{Binding MappingFunction}" />
            </DockPanel>
        </DockPanel>
        <app:NewDataAxis x:Name="XAxis"
                         AxisLabel="{Binding Label}"
                         AxisLocation="Bottom"
                         AxisType="{Binding AxisType}"
                         Background="LightGreen"
                         DataContext="{Binding XAxis}"
                         DataRange="{Binding Range}"
                         DockPanel.Dock="Bottom"
                         MappingFunction="{Binding MappingFunction}" />
        <app:DataCanvas x:Name="DataCanvas"
                        Background="LightSalmon"
                        MajorTickLineColor="{Binding MajorTickLineColor}"
                        MinorTickLineColor="{Binding MinorTickLineColor}"
                        SeriesSource="{Binding DataSeriesCollection}"
                        XAxisTicks="{Binding AxisTicks,
                                             ElementName=XAxis,
                                             Mode=OneWay}"
                        YAxisTicks="{Binding AxisTicks,
                                             ElementName=YAxis,
                                             Mode=OneWay}" />
    </DockPanel>
</UserControl>
