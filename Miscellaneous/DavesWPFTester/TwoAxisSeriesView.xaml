<UserControl x:Class="DavesWPFTester.TwoAxisSeriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="clr-namespace:DavesWPFTester"
             xmlns:controls="clr-namespace:ESME.Views.Controls;assembly=ESME.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance app:TwoAxisSeriesViewModel}"
             mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Left">
            <DockPanel>
                <TextBlock Height="{Binding ActualHeight, ElementName=XAxis}" DockPanel.Dock="Bottom" />
                <controls:DataAxis x:Name="YAxis"
                                   VerticalAlignment="Top"
                                   AxisLabel="{Binding Label}"
                                   AxisLocation="Right"
                                   AxisType="{Binding AxisType}"
                                   DataContext="{Binding YAxis}"
                                   EndValue="{Binding EndValue}"
                                   MajorTicks="{Binding MajorTicks,
                                                        Mode=OneWayToSource}"
                                   MinorTicks="{Binding MinorTicks,
                                                        Mode=OneWayToSource}"
                                   StartValue="{Binding StartValue}"
                                   TickValueFormat="{Binding TickValueFormat}" />
            </DockPanel>
        </DockPanel>
        <controls:DataAxis x:Name="XAxis"
                           AxisLabel="{Binding Label}"
                           AxisLocation="Top"
                           AxisType="{Binding AxisType}"
                           DataContext="{Binding XAxis}"
                           DockPanel.Dock="Bottom"
                           EndValue="{Binding EndValue}"
                           MajorTicks="{Binding MajorTicks,
                                                Mode=OneWayToSource}"
                           MinorTicks="{Binding MinorTicks,
                                                Mode=OneWayToSource}"
                           StartValue="{Binding StartValue}"
                           TickValueFormat="{Binding TickValueFormat}" />
        <app:DataCanvas x:Name="DataCanvas"
                        MajorTickLineColor="{Binding MajorTickLineColor}"
                        MinorTickLineColor="{Binding MinorTickLineColor}"
                        SeriesSource="{Binding SeriesSource}"
                        XAxisMajorTicks="{Binding XAxis.MajorTicks}"
                        XAxisMinorTicks="{Binding XAxis.MinorTicks}"
                        YAxisMajorTicks="{Binding YAxis.MajorTicks}"
                        YAxisMinorTicks="{Binding YAxis.MinorTicks}" />
    </DockPanel>
</UserControl>
