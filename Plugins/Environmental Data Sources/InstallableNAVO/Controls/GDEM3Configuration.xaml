<UserControl x:Class="InstallableNAVO.Controls.GDEM3Configuration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:ESME.Views.Controls;assembly=ESME.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:InstallableNAVO="clr-namespace:InstallableNAVO"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance InstallableNAVO:GDEM3}"
             mc:Ignorable="d">
    <Controls:FileOrDirectorySetting Margin="0 5"
                                     Caption="{Binding PluginName,
                                                       Mode=OneTime}"
                                     DialogTitle="Choose one GDEM database file"
                                     FileName="{Binding DataLocation,
                                                        ValidatesOnDataErrors=True,
                                                        ValidatesOnExceptions=True,
                                                        NotifyOnValidationError=True,
                                                        UpdateSourceTrigger=PropertyChanged}"
                                     FileNameFilter="NetCDF files (*.nc)|*.nc|All files (*.*)|*.*"
                                     IsDirectoryBrowser="False" />

</UserControl>
