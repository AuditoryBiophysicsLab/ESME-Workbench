<Window x:Class="ESMEWorkBench.Views.BellhopCalculatorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding TotalProgress, StringFormat=Bellhop Calculation in progress: {0:0.#}% complete}"
        Height="600"
        Width="500">
	<DockPanel LastChildFill="True">
		<TextBlock TextWrapping="Wrap">
			<TextBlock.Text>
				<Binding Path="Log" />
			</TextBlock.Text>
		</TextBlock>
	</DockPanel>
</Window>