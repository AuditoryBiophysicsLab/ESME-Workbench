<UserControl x:Class="ESME.Views.Controls.FileOrDirectorySetting" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:Controls="clr-namespace:ESME.Views.Controls">
	<StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Path=Caption, RelativeSource={RelativeSource AncestorType={x:Type Controls:FileOrDirectorySetting}}}" />
		<DockPanel LastChildFill="True">
			<Button DockPanel.Dock="Right" Content=" ..." MinWidth="30" Name="btnOpenFile" Margin=" 5 0 0 0" Click="OpenFileClick" />
            <TextBox DockPanel.Dock="Left" Text="{Binding Path=FileName, RelativeSource={RelativeSource AncestorType={x:Type Controls:FileOrDirectorySetting}}}" />
		</DockPanel>
	</StackPanel>
</UserControl>