<Window x:Class="ESME.Views.EnvironmentBuilderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:ESME.Views.EnvironmentBuilder"
        xmlns:mef="clr-namespace:MEFedMVVM.ViewModelLocator;assembly=MEFedMVVM.WPF"
        Title="EnvironmentBuilderWindow"
        mef:ViewModelLocator.ViewModel="EnvironmentBuilderViewModel"
        Height="423"
        Width="300">
	<DockPanel LastChildFill="True">
		<Menu Name="EnvironmentBuilderViewFileMenu"
		      DockPanel.Dock="Top"
		      HorizontalAlignment="Stretch"
		      BorderBrush="Black"
		      BorderThickness="1">
			<MenuItem Header="_Options">
				<MenuItem Header="Database Options"
				          Command="{Binding LaunchEnvironmentConfigurationViewCommand}"
				          InputGestureText="Ctrl+O" />
			</MenuItem>
		</Menu>
		<DockPanel LastChildFill="False"
		           Margin="10"
		           DockPanel.Dock="Bottom">
			<Button Width="75"
			        Margin="10 0 0 0"
			        IsCancel="True"
			        Content="Cancel"
			        DockPanel.Dock="Right" 
                    Command="{Binding CancelCommand}"/>			
			<Button Width="90"
			        IsDefault="True"
			        Content="Extract All Data"
			        DockPanel.Dock="Right"
			        Command="{Binding ExtractAllCommand}" />

		</DockPanel>
        <!--
		<TabControl>
			
			<TabItem Header="BST">
				<Views:BSTView />
			</TabItem>
			<TabItem Header="DBDB">
				<Views:DBDBView />                
			</TabItem>
			<TabItem Header="GDEM">
				<Views:GDEMView />
			</TabItem>
			<TabItem Header="SMGC">
				<Views:SMGCView />
			</TabItem>

		</TabControl> -->
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Bottom Sediment Database Resolution" Margin="2"/>
            <ComboBox ItemsSource="{Binding NAVODataSources.BST.Resolutions}" 
                          SelectedItem="{Binding NAVODataSources.BST.SelectedResolution}"                          
                          ToolTip="Database resolution in arc-minutes">
            </ComboBox>
            
            <TextBlock Text="Bathymetry Database Resolution" Margin="2 20 2 2"/>
            <ComboBox ItemsSource="{Binding NAVODataSources.DBDB.Resolutions}" 
                          SelectedItem="{Binding NAVODataSources.DBDB.SelectedResolution}"                          
                          ToolTip="Database resolution in arc-minutes">

            </ComboBox>
            <TextBlock Text="Month or Season" Margin="2 20 2 2"/>
            <ComboBox ItemsSource="{Binding Months}" 
                          SelectedItem="{Binding NAVODataSources.SelectedPeriod}"                          
                          ToolTip="The month or season to extract.">

            </ComboBox>
        </StackPanel>
        

	</DockPanel>

</Window>