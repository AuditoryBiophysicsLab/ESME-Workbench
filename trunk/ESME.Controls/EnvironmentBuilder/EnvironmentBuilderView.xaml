<Window x:Class="ESME.Views.EnvironmentBuilderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:ESME.Views.EnvironmentBuilder"
        Title="EnvironmentBuilderWindow" Height="300" Width="300">
    <DockPanel LastChildFill="True">
        <Menu Name="EnvironmentBuilderViewFileMenu"
                  DockPanel.Dock="Top"
			      HorizontalAlignment="Stretch"
			      BorderBrush="Black"
			      BorderThickness="1">
            <MenuItem Header="_Options">
                <MenuItem Header="Database Options"
					          Command="{Binding }"
					          InputGestureText="Ctrl+O" />                
            </MenuItem>
        </Menu>
        <TabControl>
        <TabItem Header="DBDB">
            <Views:DBDBView/>
        </TabItem>
        <TabItem Header="BST">
            <Views:BSTView/>
        </TabItem>
        <TabItem Header="SMGC" IsEnabled="False" />
        <TabItem Header="GDEM" IsEnabled="False" />
        </TabControl>
    </DockPanel>

</Window>
